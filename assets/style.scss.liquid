/* CSS styles go in here */

/* font-face */
@font-face  {
  font-family: 'Open Sans';
  src: url('OpenSans-Light.woff2') format('woff2'),
  url('OpenSans-Light.woff') format('woff');
  font-weight: 300;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Open Sans';
  src: url('OpenSans-Medium.woff2') format('woff2'),
  url('OpenSans-Medium.woff') format('woff');
  font-weight: 500;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Open Sans';
  src: url('OpenSans-Regular.woff2') format('woff2'),
  url('OpenSans-Regular.woff') format('woff');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Open Sans';
  src: url('OpenSans-ExtraBold.woff2') format('woff2'),
  url('OpenSans-ExtraBold.woff') format('woff');
  font-weight: bold;
  font-style: normal;
  font-display: swap;
}

* {
  box-sizing: border-box;
}

body {
  font-family: 'Open Sans', sans-serif;
  font-weight: 300;
  font-style: normal;
  color: #2C2C2C;
  {% comment %}background-color:#f2f3f5;{% endcomment %}
}

header {
  display: flex;
  justify-content: space-between;
  flex-direction: row-reverse;
  margin-bottom:40px;
}

.dt-c-navTop {
  display:flex;
  gap:10px;
  justify-content: flex-end;
}

a {
  text-decoration:underline;
  color: #2C2C2C;
  &:hover {
    color: #aaa;
  }
}
.dt-c-BlockHeader {
  display:flex;
  gap:30px;
}

.dt-c-navigation {

  > ul {
    display: flex;
    justify-content: center;
    margin:0;
    padding:0;
    list-style-type:none;
    gap: 10px;
    li.has-dropdown {
      ul {
        display:none;
      }
    }
  }
}

.search-form {
  margin:40px 0;
}

.dt-c-FormFields {
  margin:40px 0;
  .dt-c-whiteBlock {
    background-color:white;
    padding:20px;
  }
  .dt-c-label {
    display: block;
    margin: 10px 0;
  }

  .dt-c-field {
    position:relative;
    display: block;
    border: 1px solid #DADFE1;
    padding: 10px 12px;
    margin-bottom: 20px;
    width:100%;
    max-width:400px;
  }

  .dt-c-field-input {
    border:none;
    outline:none;
    display:block;
    width:100%;
  }


  svg {
    position:absolute;
    right:20px;
    top: 50%;
    transform:translateY(-50%);
    line-height:0;
    font-size:0;
  }


  .dt-c-btn {
    margin: 20px 0;
    display: inline-block;
    appearance: none;
    -webkit-appearance: none;
    border: 1px solid transparent;
    background-color: black;
    color: white;
    font-size: 15px;
    padding: 10px 12px;
    font-weight: 400;
    cursor: pointer;
    transition: .5s ease-in-out;
    -webkit-transition: .5s ease-in-out;

    &:hover {
      border: 1px solid #2C2C2C;
      background-color: transparent;
      color: #2C2C2C;
    }
  }
}

/* Homepage */
.dt-featured-collection {
  display:flex;
  flex-direction:column;
  align-items: center;
  margin-top:50px;
  margin-bottom:50px;
}

.dt-featured-collection-width {
  max-width:1120px;
  width:100%;
}

.dt-featured-collection-list {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap:40px;
}

.dt-featured-collection-item {
  width:100%;
}

.dt-featured-collection-item-features {
  background-color:white;
  box-shadow: 0 0 0 1px rgba(0,0,0, .2);
  border-radius:20px;
  overflow:hidden;
}
.dt-featured-collection-item-features > a {
  height:175px;
  display:block;
}
.dt-featured-collection-item-features svg {
  display:block;
  width:100%;
  height:100%;
  object-fit: cover;
  transition: .8s ease-in-out;
  &:hover {
    scale:1.2;
  }
}

.dt-featured-collection-item-height {
  height:170px;
  overflow:hidden;
}
.dt-featured-collection-item-height img {
  width:100%;
  height:100%;
  object-fit: cover;
  transition: .8s ease-in-out;
  &:hover {
    scale:1.2;
  }
}

.dt-featured-collection-item-content {
  display:flex;
  flex-direction: column;
  padding:40px;
  margin-bottom:20px;
  span, a, p {
    display:block;
    font-weight:500;
  }
  span {
    margin-bottom:10px;
  }
}

.dt-collection {
  margin:40px 0;
  padding:20px;
}

.dt-collection-width {
  max-width:1120px;
  margin: 0 auto;
}

.dt-collection-grid {
  display:grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap:40px;
}

.dt-collection-item {
  font-weight: 500;
  text-align: center;
  display:block;
  margin: 4px 0;
}
.dt-collection-item:hover {
  text-decoration: underline;
}

/* Template collection list */
.dt-templateListCollection {
  display:flex;
  flex-direction:column;
  align-items: center;
}
.dt-templateListCollection h1 {
  font-weight:500;
}

.dt-templateListCollection-width {
  max-width: 1120px;
  margin: 0 auto;
}

.dt-templateListCollection-list {
  display:grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap:20px;
}

.dt-templateListCollection-container {
  padding:20px;
}

.dt-templateListCollection-item {
  background-color:white;
  overflow: hidden;
  border:1px solid #eee;
  height:310px;
  border-radius:20px;
  box-shadow: 0px -1px -1px 1px rgba(0,0,0, .1);
}
.dt-templateListCollection-link {
  display:block;
}

.dt-templateListCollection-img {
  width:100%;
  height:100%;
  object-fit:cover;
  transition: .8s ease-in-out;
}

.dt-templateListCollection-img:hover {
  scale: 1.2;
}
.dt-templateListCollection-custom {
  height: 210px;
  overflow:hidden;
}

.dt-templateListCollection-title {
  display:flex;
  align-items:center;
  justify-content: center;
}

.dt-templateListCollection-title h2 {
  font-weight:500;
  text-align:center;
}




