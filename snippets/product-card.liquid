    <div class="dt-featured-collection-item">
        <div class="dt-featured-collection-item-features border bg-white shadow-lg rounded-lg overflow-hidden">
            <a href="{{ product_product.url }}">
                {% if product_product.featured_image %}
                    <div class="dt-featured-collection-item-height">
                        <img src="{{ product_product.featured_image | img_url: 'medium' }}"
                             alt="{{ product_product.featured_image.alt }}">
                    </div>
                {% else %}
                    {{ 'product-1' | placeholder_svg_tag: '' }}
                {% endif %}
            </a>
            <div class="flex flex-col p-4 dt-featured-collection-item-content">
                <span class="text-sm text-gray-400">{{ product_product.vendor }}</span>

                <a href="{{ product_product.url }}" class="text-gray-700 uppercase font-medium">{{ product_product.title }}</a>
                <p class="text-gray-500">{{ product_product.price | money }}</p>
            </div>
        </div>
    </div>